{
  "name": "vexa",
  "version": "1.0.0",
  "description": "Server side render with remote modules",
  "private": "true",
  "workspaces": {
    "nohoist": [
      "**/ts-node",
      "**/webpack",
      "**/react-dom",
      "**/@vexa/eslint-*",
      "**/@vexa/prettier-*",
      "**/@vexa/cli-*",
      "**/@vexa/cli"
    ],
    "packages": [
      "shared/**",
      "tools/**",
      "core/**",
      "cli/**",
      "packages/**",
      "platform/**",
      "widgets/**"
    ]
  },
  "dependencies": {
    "lerna": "^6.6.1",
    "rimraf": "^4.4.1"
  },
  "scripts": {
    "bootstrap": "yarn install && yarn run lerna:bootstrap",
    "dev": "yarn run clear && yarn run bootstrap && yarn run lerna:build",
    "ðŸ”¥": "----------------------------------------",
    "lerna:bootstrap": "lerna bootstrap",
    "ðŸ“¦": "----------------------------------------",
    "lerna:build": "yarn run lerna:build-tools && yarn run lerna:build-cli && yarn run lerna:build-package",
    "lerna:build-tools": "lerna run build --parallel --scope @vexa/tools-*",
    "lerna:build-cli": "lerna run build --scope=@vexa/cli-config && lerna run build --scope=@vexa/cli-app",
    "lerna:build-package": "lerna run build --scope @vexa/cli",
    "ðŸ§¹": "----------------------------------------",
    "clear": "yarn run clear:dist && yarn run clear:yarn.lock && yarn run clear:coverage && yarn run clear:node_modules",
    "clear:node_modules": "rimraf --glob ./**/node_modules",
    "clear:yarn.lock": "rimraf --glob ./yarn.lock",
    "clear:dist": "rimraf --glob ./**/dist",
    "clear:coverage": "rimraf --glob ./**/coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pan-alexey/talia.git"
  },
  "author": "Pan Alexey <pan-alexey@live.com>",
  "license": "MIT",
  "homepage": "https://github.com/pan-alexey/talia#readme"
}
