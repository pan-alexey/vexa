{
  "name": "@vexa/cli",
  "version": "1.0.0",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "vexa-cli": "./bin/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "yarn run build",
    "clear": "rimraf build",
    "build": "yarn run build:bin && yarn run build:main",
    "build:bin":"tsc --project tsconfig-bin.json",
    "build:main":"tsc --project tsconfig-main.json",
    "test": "jest --config jest.config.ts",
    "test:coverage": "jest --config jest.config.ts  --coverage",
    "lint": "eslint ./ --ext .js --ext .ts",
    "lint:fix": "eslint ./ --ext .js --ext .ts --fix"
  },
  "devDependencies": {
    "@vexa/eslint-config": "^1.0.0",
    "@vexa/prettier-config": "^1.0.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.6.2",
    "@types/webpack": "^5.28.0",
    "@types/fs-extra": "^11.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "jest": "^28.1.3"
  },
  "dependencies": {
    "@vexa/cli-config": "^1.0.0",
    "@vexa/cli-app": "^1.0.0",
    "typescript": "^5.0.3",
    "commander": "^10.0.0",
    "fs-extra":"^11.1.1",
    "mkdirp": "^3.0.1",
    "ts-loader":"^9.4.2",
    "webpack": "^5.78.0"
  }
}
